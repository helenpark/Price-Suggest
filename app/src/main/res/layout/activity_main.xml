<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/barcodeCaptureButton"
        android:onClick="barcodeCapture"
        android:background = "@drawable/rounded_button"
        android:elevation="10dp"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/imageCaptureButton"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageCaptureButton"
        android:background = "@drawable/rounded_button"
        android:onClick="imageCapture"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_login"
        android:scaleType="fitXY"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DISCOUNT"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SCAN\nBARCODE"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/barcodeCaptureButton"
        android:layout_alignStart="@+id/barcodeCaptureButton" />

    <Button
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:id="@+id/button2"
        android:onClick="getRecentItems"
        android:background="@android:drawable/ic_input_get"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TAKE\nPICTURE"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:layout_below="@+id/imageCaptureButton"
        android:layout_alignLeft="@+id/imageCaptureButton"
        android:layout_alignStart="@+id/imageCaptureButton"
        android:layout_marginTop="10dp" />

</RelativeLayout>
